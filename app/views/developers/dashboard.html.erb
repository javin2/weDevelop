<h1 class="text-center">Developers Dashboard</h1><br><br><br>

<div>
	<h3>Projects</h3><br><br><hr><br>
	<% @projects.each do |project| %>
		<div>
		<h3><%= project.title %></h3>
		<%= link_to 'Show Project', project %>
		<br><br><br><br>
		</div>
	<% end %>

	<%= link_to "Create New Project", new_project_path, class: 'btn btn-primary' %>
</div>

<div>
	<h3>Clients</h3>
	<% @projects.each do |project| %>
		<% project.project_members.each do |pm| %>
			<p><%= pm.client.email %></p>
			<% end %>
	<% end %>

	<%= link_to "View Client Directory", developers_client_details_path, class: 'btn btn-primary' %>
</div>