<!DOCTYPE html>
<html>
  <head>
    <title>WeDevelop</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>

    <nav class="navbar navbar-light bg-light" id="sitenavbar">

      <a class="navbar-brand" href="/">weDevelop</a>

      <div class="nav navbar-nav navbar-right">
        
        <%= link_to "Log In", new_developer_session_path, class: 'btn btn-primary navbar-btn', method: :get %>

      </div>

    </nav>

    <div class="container">
      
      <% if notice.present? %>
        <aside class="alert alert-info">
          <%= notice %>
        </aside>

      <% end %>
      <% if alert.present? %>
        <aside class="alert alert-danger">
          <%= alert %>
        </aside>
      <% end %>


      <%= yield %>

    </div>
 
  </body>
</html>
